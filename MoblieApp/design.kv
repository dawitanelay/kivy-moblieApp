<LoginScreen>:
    GridLayout:
       
        cols:1 

        GridLayout:
            padding:15,15
            spacing:20,20 
            cols:1
            Label:
                text:"Login"
                font_size:'20sp'
            TextInput:
                id:username
                hint_text:"Username"
            TextInput:
                id:password
                password:True 
                hint_text:"Password"
            RelativeLayout:
                Button:
                    text:"Login"
                    on_press:root.login(root.ids.username.text,root.ids.password.text)
                    size_hint:0.3 ,0.5
                    pos_hint:{'center_x':0.5,'center_y':0.6}
            Label:
                id:login_wrong
                text: "" 


        GridLayout:
            size_hint:0.2,0.2
            padding:10,10
            spacing:10,10
            cols:2
            Button:
                text:"Sign Up"
                background_color:1,1,1,0
                opacity: 1 if self.state =='normal' else 0.5
                color:0.1,1.7,1,1 
                on_press:root.sign_up()  
            Button:
                text:
                text:"Forgot Password"
                background_color:1,1,1,0
                opacity: 1 if self.state =='normal' else 0.5
                color:0.1,1.7,1,1 

<SignUpScreen>:
    GridLayout:
        padding:15,15
        spacing:20,20 
        cols:1 
        Label: 
            text: "Sign Up here"
        TextInput:
            id:username
            text:"Username"
        TextInput:
            id:password
            password:True
            text:"Password"
        Button:
            text:"Submit" 
            background_color:1,1,1,0
            opacity: 1 if self.state =='normal' else 0.5
            color:0.1,1.7,1,1 
            on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<SignUpScucuss>:
    GridLayout:
        padding:15,15
        spacing:20,20 
        cols:1
        Label:
            text: "Sign Up Successfully"
        Button:
            background_color:1,1,1,0
            opacity: 1 if self.state =='normal' else 0.5
            color:0.1,1.7,1,1 
            text:"Login Page" 
            on_press:root.go_to_login()
<LoginScreenSuccess>:
    GridLayout:
        cols:1
        RelativeLayout:
            ImageButten:
                on_press:root.log_out()
                source:'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint:0.35,0.35 
                pos_hint:{'center_x':0.93,'center_y':0.8} 
        Label:
            text:"How do you feel ?"
        TextInput:
            id:feling
            hint_text:"Things to Try. Happy ,Sad, Unloved "
        Button:
            text:"Enlighten me"
            on_press:root.get_qoutes(root.ids.feling.text)
        ScrollView:
            Label:
                id:quotes   
                text:"" 
                text_size:self.width,None
                size_hint_y:None
                height: self.texture_size[1] 
                
<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScucuss:
        name:"sign_up_succss"
    LoginScreenSuccess:
        name:"login_screen_success"
    
